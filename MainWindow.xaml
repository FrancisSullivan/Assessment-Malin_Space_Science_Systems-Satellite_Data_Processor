<Window x:Class="Malin_Space_Science_Systems_Satellite_Data_Processor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Malin_Space_Science_Systems_Satellite_Data_Processor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="665">
    <Grid Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="496*"/>
            <ColumnDefinition Width="225*"/>
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="SigmaComboBox" HorizontalAlignment="Left" Margin="17,35,0,0" Width="51" VerticalAlignment="Top">
            <ComboBoxItem/>
        </ComboBox>
        <ComboBox x:Name="MuComboBox" HorizontalAlignment="Left" Margin="8,35,0,0" VerticalAlignment="Top" Width="50" Grid.Column="1"/>

        <Label Content="Sigma" HorizontalAlignment="Left" Margin="17,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Mu" HorizontalAlignment="Left" Margin="8,10,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="LoadSensorDataButton" Content="Load Sensor Data" HorizontalAlignment="Left" Margin="17,62,0,0" VerticalAlignment="Top" Width="138" Grid.ColumnSpan="2" Click="LoadSensorDataButton_Click"/>
        <ListView x:Name="SensorDataListView" Margin="17,87,420,145" Grid.ColumnSpan="2" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Sensor A"  DisplayMemberBinding="{Binding SensorA_ListView}" Width="55"/>
                    <GridViewColumn Header="Sensor B"  DisplayMemberBinding="{Binding SensorB_ListView}" Width="55"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="222,39,176,141" Grid.Column="1"/>
        <Label Content="Sensor A" HorizontalAlignment="Left" Margin="99,4,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="102,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Column="1" IsEnabled="False"/>
        <Button Content="Search Iterative" HorizontalAlignment="Left" Margin="102,181,0,0" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="102,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Column="1" IsEnabled="False"/>
        <Button Content="Search Recursive" HorizontalAlignment="Left" Margin="102,229,0,0" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
        <TextBox x:Name="SortIterativeTextBox" HorizontalAlignment="Left" Margin="102,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Column="1" IsEnabled="False"/>
        <Button Content="Sort Iterative" HorizontalAlignment="Left" Margin="102,85,0,0" VerticalAlignment="Top" Width="100" HorizontalContentAlignment="Center" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="102,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Column="1" IsEnabled="False"/>
        <Button Content="Sort Recursive" HorizontalAlignment="Left" Margin="102,133,0,0" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="102,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="19" Grid.Column="1"/>
        <Label Grid.Column="1" Content="Search Target:" HorizontalAlignment="Left" Margin="102,35,0,0" VerticalAlignment="Top" Width="100"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="464,39,159,141" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label Content="Sensor B" HorizontalAlignment="Left" Margin="341,4,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="344,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Column="1" IsEnabled="False"/>
        <Button Content="Search Iterative" HorizontalAlignment="Left" Margin="344,181,0,0" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="344,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Column="1" IsEnabled="False"/>
        <Button Content="Search Recursive" HorizontalAlignment="Left" Margin="344,229,0,0" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="344,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Column="1" IsEnabled="False"/>
        <Button Content="Sort Iterative" HorizontalAlignment="Left" Margin="344,85,0,0" VerticalAlignment="Top" Width="100" HorizontalContentAlignment="Center" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="344,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Column="1" IsEnabled="False"/>
        <Button Content="Sort Recursive" HorizontalAlignment="Left" Margin="344,133,0,0" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="344,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="19" Grid.Column="1"/>
        <Label Grid.Column="1" Content="Search Target:" HorizontalAlignment="Left" Margin="344,35,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
